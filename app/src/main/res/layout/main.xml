<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#0F0F0F">

    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="56dp">

            <TextView
                android:id="@+id/tvSongTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_song_selected"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="marquee"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/idle"
                android:textColor="#03DAC6"
                android:textSize="13sp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings"
            android:tint="#FFFFFF"/>
    </RelativeLayout>

    <!-- ALBUM ART -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginBottom="16dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="6dp">

        <ImageView
            android:id="@+id/ivMainAlbumArt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>
    </androidx.cardview.widget.CardView>

    <!-- Playback Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="-8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progressTint="#BB86FC"
            android:thumbTint="#BB86FC"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <!-- MAIN CONTROLS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:src="@drawable/ic_prev"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:background="@drawable/btn_dark_round" />

        <!-- play and pause -->
        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="48dp"
            android:src="@drawable/ic_play"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/btn_primary_round" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:src="@drawable/ic_next"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:background="@drawable/btn_dark_round" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <ImageButton
            android:id="@+id/btnStop"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:src="@drawable/ic_stop"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:background="@drawable/btn_danger_round" />
    </LinearLayout>

    <!-- MUSIC LIST -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/music_list"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"/>

    <ListView
        android:id="@+id/lvMusicFiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="0dp"
        android:padding="6dp"
        android:background="#181818"/>

    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/btn_primary_round"
        android:textColor="#0F0F0F"
        android:layout_marginTop="8dp"/>

</LinearLayout>
