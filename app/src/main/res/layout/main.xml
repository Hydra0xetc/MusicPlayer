<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">

    <!-- Input Directory Path -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/etDirPath"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Directory path"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:background="#1E1E1E"
            android:padding="12dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCAN"
            android:layout_marginStart="8dp"
            android:background="#BB86FC"
            android:textColor="#121212"
            android:paddingHorizontal="16dp" />
    </LinearLayout>

    <!-- Now Playing Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1E1E1E"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvSongTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No song selected"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Idle"
            android:textColor="#03DAC6"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Player Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- Previous Button -->
        <Button
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⏮ PREV"
            android:background="#333333"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp"
            android:enabled="false" />

        <!-- Play/Pause Button -->
        <Button
            android:id="@+id/btnPlayPause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="❚❚ PAUSE"
            android:background="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp"
            android:enabled="false" />

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NEXT ⏭"
            android:background="#333333"
            android:textColor="#FFFFFF"
            android:enabled="false" />
    </LinearLayout>

    <!-- Stop and Loop Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="■ STOP"
            android:background="#CF6679"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp"
            android:enabled="false" />

        <Button
            android:id="@+id/btnLoop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Loop"
            android:background="#1A1A1A"
            android:textColor="#666666"
            android:enabled="false" />
    </LinearLayout>

    <!-- Music List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music Files:"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <ListView
        android:id="@+id/lvMusicFiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1E1E1E"
        android:divider="#333333"
        android:dividerHeight="1dp" />

    <!-- Log Toggle Button -->
    <Button
        android:id="@+id/btnToggleLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Log"
        android:background="#1E1E1E"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <!-- Log Section -->
    <LinearLayout
        android:id="@+id/logSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log:"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <ScrollView
            android:id="@+id/logContainer"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#1E1E1E"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#03DAC6"
                android:textSize="12sp"
                android:fontFamily="monospace" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>
