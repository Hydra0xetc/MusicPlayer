<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F0F0F">

    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#1A1A1A">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingEnd="56dp">

            <TextView
                android:id="@+id/tvLibraryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music Library"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvSongCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No songs in library"
                android:textColor="#BB86FC"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_dark_round"
            android:src="@drawable/ic_settings"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <!-- SEARCH/FILTER BAR (Future feature) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Songs"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnScanLibrary"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="ðŸ”„ Scan"
            android:textColor="#0F0F0F"
            android:textSize="13sp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/btn_primary_round"/>
    </LinearLayout>

    <!-- LOADING INDICATOR -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:indeterminateTint="#BB86FC"
        android:visibility="gone"/>

    <!-- MUSIC LIST -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/lvAllMusic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#2A2A2A"
            android:dividerHeight="1dp"
            android:padding="8dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:fastScrollEnabled="true"/>

        <!-- EMPTY STATE -->
        <LinearLayout
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽµ"
                android:textSize="64sp"
                android:alpha="0.3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No music found"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap the Scan button to search for music files"
                android:textColor="#888888"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </FrameLayout>

    <!-- FOOTER INFO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#1A1A1A"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap any song to play"
            android:textColor="#666666"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>
