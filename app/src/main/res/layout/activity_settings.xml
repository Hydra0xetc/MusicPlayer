<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal" />

    <!-- Music Directory Setting -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music Directory"
        android:textColor="#BBBBBB"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etMusicDir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="/sdcard/Music/"
        android:textColor="#FFFFFF"
        android:textColorHint="#666666"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="textNoSuggestions" />



    <!-- Auto Scan Music Setting -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Auto Scan Music on Startup/Config Change"
            android:textColor="#BBBBBB"
            android:textSize="16sp"/>

        <Switch
            android:id="@+id/swAutoScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/switch_on"
            android:trackTint="@color/switch_off"/>
    </LinearLayout>

    <!-- Log Level Setting -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Log Level"
            android:textColor="#BBBBBB"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/spLogLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/log_levels"
            android:spinnerMode="dropdown"
            android:backgroundTint="#BBBBBB"/>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:background="#333333"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:background="#BB86FC"
            android:textColor="#121212" />
    </LinearLayout>

</LinearLayout>
